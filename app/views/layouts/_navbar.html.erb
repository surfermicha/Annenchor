<!--=== Header v6 ===-->
<header class="header-v6 header-classic-dark header-dark-dropdown header-sticky">
	<!-- Navbar -->
	<div class="navbar mega-menu" role="navigation">
		<div class="container">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="menu-container">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>

				<!-- Navbar Brand -->
				<div class="navbar-brand">
					<%= link_to "Your app", root_path, :class => "brand" %>
				</div>
				<!-- End Navbar Brand -->

				<!-- Header Inner Right -->
				<div class="header-inner-right">
					<ul class="menu-icons-list">
						<li class="menu-icons">
							<i class="menu-icons-style search search-close search-btn fa fa-search"></i>
							<div class="search-open">
								<input type="text" class="animated fadeIn form-control" placeholder="Suchen ...">
							</div>
						</li>
						<li class="menu-icons">
							<i class="menu-icons-style fa fa-globe"></i>
						</li>
					</ul>
				</div>
				<!-- End Header Inner Right -->
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse navbar-responsive-collapse">
				<div class="menu-container">
					<ul class="nav navbar-nav">
						<li class=<%= current_page?(root_path) ? "active" : "" %> >
							<%= link_to (t "navbar.start"), root_path%>
						</li>
						<li class=<%= current_page?(concerts_path) ? "active" : "" %>>
							<%= link_to (t "navbar.concerts"), concerts_path%>
						</li>
						<li class=<%= current_page?(aboutus_path) ? "active dropdown" : "dropdown" %>>
							<a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown"> <%= (t "navbar.aboutus") %> </a>
							<ul class="dropdown-menu">
								<li>
									<%= link_to (t "navbar.aboutus"), aboutus_path%>
								</li>
								<li>
									<%= link_to (t "navbar.tidings") %>
								</li>
							</ul>
						</li>
						<li class=<%= current_page?(participate_path) ? "active" : "" %>>
							<%= link_to (t "navbar.participate"), participate_path%>
						</li>
						<li class=<%= current_page?(sponsoring_path) ? "active" : "" %>>
							<%= link_to (t "navbar.sponsoring"), sponsoring_path%>
						</li>
						<li class=<%= current_page?(contact_path) ? "active" : "" %>>
							<%= link_to (t "navbar.contact"), contact_path%>
						</li>
					</ul>
				</div>
			</div><!--/navbar-collapse-->
		</div>
	</div>
	<!-- End Navbar -->
	</header>
	<!--=== End Header v6 ===-->
