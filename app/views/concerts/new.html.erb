<div class="container content">
<h1>New Concert</h1>


<%= form_for :concert, url: concerts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :subTitle %><br>
    <%= f.text_field :subTitle %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>
 <p>
    <%= f.label :category %><br>
    <%= f.select :category, Concert.categories.keys %>
  </p>
  <p>
    <%= f.label :published %><br>
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.label :eventDateTitle %><br>
    <%= f.text_field  :eventDateTitle %>
  </p>
  <p>
    <%= f.label :eventDate %><br>
    <%= f.date_field :eventDate %>
  </p>
  <p>
    <%= f.label :eventTime %><br>
    <%= f.time_field :eventTime %>
  </p>
  <p>
    <%= f.submit "Create", :class => 'btn-u' %>
  </p>
<% end %>
</div>
